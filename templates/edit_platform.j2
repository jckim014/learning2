<html>

<head>
	<title>Edit Platform</title>
    <link href="style.css" rel="stylesheet" type="text/css" />
</head>

<body>
    <div>
        <table border="1" cellpadding="5"> 
            <caption><strong> Editing Platform: </strong></caption>
            <!-- Access data tuple passed from app.py -->
            {% if data %}
                <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the column name -->
                        {% for key in data[0].keys() %}

                        <!-- Create a <th> tag with the key inside of it, this will be our header row -->
                        <th scope="col" data-field="{{ key }}" data-filter-control="input">{{ key }}</th>
                        
                        <!-- End of this for loop -->
                        {% endfor %} 
                    </tr>

                <tbody>
                    <!-- Now, iterate through every item in data -->
                    {% for item in data %}
                    <tr>
                        <!-- Then iterate through every key in the current item dictionary -->
                        {% for key in item.keys() %}
                        
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{item[key]}}</td> {% endfor %} 
                    </tr> 
                    {% endfor %} 
            {% endif %} 
        </table>
        <p>&nbsp;</p>
        <div id="edit">
            <!-- form to edit data in Platform-->
            <form id="editPlatform" action="/edit_platform/{{data[0].platformID}}" method="post">
                <legend><strong>Edit Platform</strong></legend>
                <fieldset>
                    <input type="hidden" value="{{data[0].platformID}}" class="form-control" id="platformID" name="platformID" required>

                    <label for="make"> platformName </label>
                    <input type="text" value="{{data[0].platformName}}" class="form-control" id="platformName" name="platformName" required>

                    <label for="model"> numberShows </label>
                    <input type="number" value="{{data[0].numberShows}}" class="form-control" id="numberShows" name="numberShows">

                
                </fieldset>
                <input type="submit" value="Edit Platform" name="Edit_Platform" class="btn btn-primary" style="margin:.5rem;">
                <a href='/platforms'><input class="btn" type="button" value="Cancel"></a>
            </form>

</html>